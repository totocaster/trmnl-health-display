<style>
  :root {
    --card-border: 1px solid rgba(0, 0, 0, 0.08);
    --muted: rgba(0, 0, 0, 0.55);
  }

  .dashboard {
    display: flex;
    flex-direction: column;
    gap: 16px;
    font-family: "Inter", "Helvetica", sans-serif;
  }

  .header h1 {
    font-size: 48px;
    margin: 0;
  }

  .header p {
    color: var(--muted);
    margin: 0;
  }

  .progress {
    border: var(--card-border);
    border-radius: 12px;
    padding: 8px 12px;
  }

  .progress-bar {
    height: 8px;
    background: black;
    border-radius: 8px;
  }

  .cards {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 12px;
  }

  .card {
    border: var(--card-border);
    border-radius: 12px;
    padding: 12px;
  }

  .card h2 {
    font-size: 20px;
    margin: 0 0 6px 0;
  }

  .card dl {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4px;
    margin: 0;
  }

  .card dt {
    font-size: 12px;
    text-transform: uppercase;
    color: var(--muted);
  }

  .card dd {
    margin: 0 0 6px 0;
    font-size: 18px;
  }

  .hint {
    font-size: 12px;
    color: var(--muted);
  }

  .timestamp {
    font-size: 10px;
    color: var(--muted);
    text-align: right;
  }

  @media (max-width: 620px) {
    .cards {
      grid-template-columns: 1fr;
    }
  }

  .chart-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 12px;
  }

  .chart-card {
    border: var(--card-border);
    border-radius: 12px;
    padding: 12px;
  }

  .chart-card svg {
    width: 100%;
    height: 90px;
  }

  .chart-card p {
    margin: 0;
    color: var(--muted);
  }

  @media (max-width: 900px) {
    .chart-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 620px) {
    .chart-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="dashboard">
  <div class="header">
    <h1>{{ header }}</h1>
    <p>{{ subtitle }}</p>
  </div>

  <div class="chart-grid">
    <div class="chart-card">
      <h2>Weight ({{ charts.window_days }}d)</h2>
      {% if charts.weight %}
        <svg viewBox="0 0 280 80" preserveAspectRatio="none">
          <polyline points="{{ charts.weight.points }}" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></polyline>
        </svg>
        <div class="hint">{{ charts.weight.min }} – {{ charts.weight.max }}</div>
      {% else %}
        <p>No recent data.</p>
      {% endif %}
    </div>

    <div class="chart-card">
      <h2>Body Fat ({{ charts.window_days }}d)</h2>
      {% if charts.body_fat %}
        <svg viewBox="0 0 280 80" preserveAspectRatio="none">
          <polyline points="{{ charts.body_fat.points }}" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></polyline>
        </svg>
        <div class="hint">{{ charts.body_fat.min }} – {{ charts.body_fat.max }}</div>
      {% else %}
        <p>No recent data.</p>
      {% endif %}
    </div>

    <div class="chart-card">
      <h2>Protein Intake</h2>
      {% if charts.protein %}
        <svg viewBox="0 0 280 80" preserveAspectRatio="none">
          <line x1="0" y1="0" x2="280" y2="0" stroke="rgba(0,0,0,0.3)" stroke-dasharray="4 3"></line>
          {% for bar in charts.protein.bars %}
            <rect x="{{ bar.x }}" y="{{ bar.y }}" width="{{ charts.protein.bar_width }}" height="{{ bar.height }}" fill="black" opacity="0.75"></rect>
          {% endfor %}
        </svg>
        <div class="hint">Target {{ charts.protein.target_label }}</div>
      {% else %}
        <p>No recent data.</p>
      {% endif %}
    </div>
  </div>

  {% if progress %}
    <div class="progress">
      <div class="progress-bar" style="width: {{ progress.percent }}%;"></div>
      <div class="hint">{{ progress.label }}</div>
    </div>
  {% endif %}

  <div class="cards">
    {% for card in cards %}
      <div class="card">
        <h2>{{ card.title }}</h2>
        <dl>
          {% for row in card.rows %}
            <dt>{{ row.label }}</dt>
            <dd>{{ row.value }}</dd>
            {% if row.hint %}
              <div class="hint">{{ row.hint }}</div>
            {% endif %}
          {% endfor %}
        </dl>
      </div>
    {% endfor %}
  </div>

  <div class="timestamp">Updated {{ generated_at }}</div>
</div>

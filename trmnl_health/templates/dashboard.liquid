<div class="screen">
  <div class="view view--full">
    <div class="flex flex--col gap--medium">
      <div class="grid grid--cols-2 gap--small">
        <div class="item item--emphasis-3">
          <div class="meta"></div>
          <div class="content">
            <span class="label">Current Weight</span>
            <span class="value value--large" data-value-fit="true">{{ summary.current_weight }}</span>
          </div>
        </div>
        <div class="item item--emphasis-2">
          <div class="meta"></div>
          <div class="content">
            <span class="label">7-day Avg Weight</span>
            <span class="value value--large" data-value-fit="true">{{ summary.rolling_avg }}</span>
          </div>
        </div>
        <div class="item item--emphasis-1">
          <div class="meta"></div>
          <div class="content">
            <span class="label">Total Lost</span>
            <span class="value value--small value--tnums">{{ summary.total_lost }}</span>
          </div>
        </div>
        <div class="item item--emphasis-1">
          <div class="meta"></div>
          <div class="content">
            <span class="label">Remaining To Target</span>
            <span class="value value--small value--tnums">{{ summary.to_goal }}</span>
          </div>
        </div>
      </div>

      <div class="grid grid--cols-2 gap--small">
        <div class="item">
          <div class="meta"></div>
          <div class="content">
            <span class="label label--small">Weight · {{ charts.window_days }}d</span>
            {% if charts.weight %}
            <div class="p--2 bg--gray-70 2bit:bg--gray-75 rounded--small">
              <svg viewBox="0 0 280 80" preserveAspectRatio="none" class="w--full h--24">
                <polyline points="{{ charts.weight.points }}" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></polyline>
              </svg>
              <span class="label label--xsmall clamp--none">{{ charts.weight.min }} – {{ charts.weight.max }}</span>
            </div>
            {% else %}
            <span class="description">No recent weight data.</span>
            {% endif %}
          </div>
        </div>

        <div class="item">
          <div class="meta"></div>
          <div class="content">
            <span class="label label--small">Body Fat · {{ charts.window_days }}d</span>
            {% if charts.body_fat %}
            <div class="p--2 bg--gray-70 2bit:bg--gray-75 rounded--small">
              <svg viewBox="0 0 280 80" preserveAspectRatio="none" class="w--full h--24">
                <polyline points="{{ charts.body_fat.points }}" fill="none" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></polyline>
              </svg>
              <span class="label label--xsmall clamp--none">{{ charts.body_fat.min }} – {{ charts.body_fat.max }}</span>
            </div>
            {% else %}
            <span class="description">No recent body fat entries.</span>
            {% endif %}
          </div>
        </div>
      </div>

      <div class="item">
        <div class="content">
          <span class="label">Trajectory</span>
          {% if projection.goal_date %}
          <div class="grid grid--cols-2 gap--xsmall">
            <div class="flex flex--col gap--xsmall">
              <span class="label value--xsmall value--tnums">{{ projection.rate_per_day }}</span>
              <span class="label label--xsmall clamp--none">{{ projection.rate_per_week }} weekly</span>
            </div>
            <div class="flex flex--col gap--xsmall">
              <span class="label value--xsmall">{{ projection.goal_date }}</span>
              <span class="label label--xsmall clamp--none">Projected goal date</span>
            </div>
          </div>
          {% else %}
          <span class="description">{{ projection.message }}</span>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="title_bar">
  <img class="image" src="https://usetrmnl.com/images/plugins/trmnl--render.svg" alt="TRMNL">
  <span class="title">Health Dashboard</span>
  <span class="instance clamp--none">Updated {{ generated_at }}</span>
</div>
